<UserControl x:Class="Cine_app.Vistas.CarteleraView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barra Superior -->
        <Border Grid.Row="0" Background="#1a1a2e" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="&#x1F3AC;" FontSize="28" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="CINEMAX" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock x:Name="txtBienvenida" 
                              Text="Bienvenido, Invitado" 
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"
                              FontSize="14"/>
                    
                    <Button x:Name="btnCuentaAccion"
                            Content="Iniciar Sesion"
                            Click="BtnCuentaAccion_Click"
                            Background="#e94560"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="15,8"
                            Margin="0,0,10,0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand"/>

                    <Button x:Name="btnPerfil"
                            Content="&#x1F464; Mi Perfil"
                            Click="BtnPerfil_Click"
                            Background="#0f3460"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="15,8"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido Principal -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,30">
                <TextBlock Text="Peliculas en Cartelera" 
                          FontSize="32" 
                          FontWeight="Bold"
                          Margin="0,0,0,30"/>

                <!-- Loading -->
                <StackPanel x:Name="pnlLoading" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Visible">
                    <TextBlock Text="&#x23F3;" FontSize="64"/>
                    <TextBlock Text="Cargando peliculas..." 
                              FontSize="18" 
                              Foreground="#666"
                              Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Grid de Peliculas -->
                <ItemsControl x:Name="itemsPeliculas" Visibility="Collapsed">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
