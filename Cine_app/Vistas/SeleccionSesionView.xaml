<UserControl x:Class="Cine_app.Vistas.SeleccionSesionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <UserControl.Resources>
        <!-- Estilo para hacer el calendario mas grande -->
        <Style TargetType="Calendar">
            <Setter Property="CalendarButtonStyle">
                <Setter.Value>
                    <Style TargetType="CalendarButton">
                        <Setter Property="MinWidth" Value="50"/>
                        <Setter Property="MinHeight" Value="50"/>
                        <Setter Property="FontSize" Value="16"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CalendarDayButtonStyle">
                <Setter.Value>
                    <Style TargetType="CalendarDayButton">
                        <Setter Property="MinWidth" Value="50"/>
                        <Setter Property="MinHeight" Value="50"/>
                        <Setter Property="FontSize" Value="16"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabecera con boton volver -->
        <Border Grid.Row="0" Background="#1a1a2e" Padding="20,15">
            <Grid>
                <Button x:Name="btnVolver"
                        Content="&#x2190; Volver"
                        Click="BtnVolver_Click"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,8"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        HorizontalAlignment="Left"/>

                <TextBlock Text="Seleccion de Horario"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Contenido Principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel Izquierdo - Info Pelicula -->
            <Border Grid.Column="0" Background="#F5F5F5" Padding="20">
                <StackPanel>
                    <Border CornerRadius="10" 
                           Background="#ddd" 
                           Width="280" 
                           Height="400"
                           Margin="0,0,0,20">
                        <Image x:Name="imgPelicula" Stretch="UniformToFill"/>
                    </Border>

                    <TextBlock x:Name="txtTitulo" 
                              FontSize="24" 
                              FontWeight="Bold"
                              TextWrapping="Wrap"
                              Margin="0,0,0,10"/>

                    <TextBlock x:Name="txtInfo"
                              FontSize="14"
                              Foreground="#666"
                              TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Panel Derecho - Calendario y Sesiones -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30">
                    <!-- Calendario -->
                    <TextBlock Text="Seleccione una fecha:"
                              FontSize="20"
                              FontWeight="Bold"
                              Margin="0,0,0,15"/>

                    <Calendar x:Name="calendario"
                             HorizontalAlignment="Left"
                             Margin="0,0,0,30"
                             SelectedDatesChanged="Calendario_SelectedDatesChanged"/>

                    <!-- Sesiones -->
                    <TextBlock Text="Horarios disponibles:"
                              FontSize="20"
                              FontWeight="Bold"
                              Margin="0,0,0,15"/>

                    <!-- Loading -->
                    <StackPanel x:Name="pnlLoadingSesiones"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"
                               Margin="0,50,0,0">
                        <TextBlock Text="&#x23F3;" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="Cargando sesiones..." 
                                  FontSize="16" 
                                  Foreground="#666"
                                  HorizontalAlignment="Center"
                                  Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- Sin sesiones -->
                    <StackPanel x:Name="pnlSinSesiones"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"
                               Margin="0,50,0,0">
                        <TextBlock Text="&#x1F4C5;" FontSize="64" HorizontalAlignment="Center" Opacity="0.3"/>
                        <TextBlock Text="No hay sesiones disponibles" 
                                  FontSize="20" 
                                  Foreground="#999"
                                  HorizontalAlignment="Center"
                                  Margin="0,15,0,0"/>
                        <TextBlock Text="Seleccione otra fecha" 
                                  FontSize="14" 
                                  Foreground="#bbb"
                                  HorizontalAlignment="Center"
                                  Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- Lista de sesiones -->
                    <ScrollViewer x:Name="scrollSesiones" 
                                 Visibility="Collapsed"
                                 VerticalScrollBarVisibility="Auto"
                                 MaxHeight="500">
                        <ItemsControl x:Name="itemsSesiones"/>
                    </ScrollViewer>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
