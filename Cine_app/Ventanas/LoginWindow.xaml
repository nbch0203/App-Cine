<Window x:Class="Cine_app.Ventanas.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar Sesion - Cinema" Height="650" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="500"
        MinWidth="400">
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1a1a2e" Offset="0"/>
                <GradientStop Color="#16213e" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Background="#ffffff"
                    CornerRadius="20"
                    Padding="40"
                    Width="380"
                    Margin="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Logo/Icono -->
                    <TextBlock Text="🎬" 
                              FontSize="60" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="CINEMA APP" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="#e94560"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Iniciar Sesion" 
                              FontSize="18" 
                              Foreground="#666"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,30"/>

                    <!-- Email -->
                    <TextBlock Text="Email" 
                              Foreground="#333"
                              FontWeight="SemiBold"
                              Margin="0,0,0,5"/>
                    
                    <TextBox x:Name="txtEmail"
                            Height="40"
                            Padding="10"
                            FontSize="14"
                            Margin="0,0,0,20"
                            Background="#f5f5f5"
                            BorderBrush="#ddd"
                            BorderThickness="1"
                            VerticalContentAlignment="Center"/>

                    <!-- Password -->
                    <TextBlock Text="Contrasena" 
                              Foreground="#333"
                              FontWeight="SemiBold"
                              Margin="0,0,0,5"/>
                    
                    <PasswordBox x:Name="txtPassword"
                                Height="40"
                                Padding="10"
                                FontSize="14"
                                Margin="0,0,0,10"
                                Background="#f5f5f5"
                                BorderBrush="#ddd"
                                BorderThickness="1"
                                VerticalContentAlignment="Center"
                                KeyDown="TxtPassword_KeyDown"/>

                    <!-- Mensaje de error -->
                    <TextBlock x:Name="txtMensaje"
                              Text=""
                              Foreground="Red"
                              FontSize="12"
                              TextWrapping="Wrap"
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"
                              Visibility="Collapsed"/>

                    <!-- Boton de Login -->
                    <Button x:Name="btnLogin"
                           Content="Iniciar Sesion"
                           Click="BtnLogin_Click"
                           Height="45"
                           Margin="0,20,0,10"
                           Background="#e94560"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           BorderThickness="0"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#ff6b7a"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Separador -->
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center"
                               Margin="0,20,0,10">
                        <Line X1="0" X2="100" 
                             Stroke="#ddd" 
                             StrokeThickness="1"
                             VerticalAlignment="Center"
                             Margin="0,0,10,0"/>
                        <TextBlock Text="o" Foreground="#999"/>
                        <Line X1="0" X2="100" 
                             Stroke="#ddd" 
                             StrokeThickness="1"
                             VerticalAlignment="Center"
                             Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Boton de Registro -->
                    <Button Content="Crear cuenta nueva"
                           Click="BtnRegistro_Click"
                           Height="40"
                           Background="Transparent"
                           Foreground="#e94560"
                           FontSize="14"
                           FontWeight="SemiBold"
                           BorderBrush="#e94560"
                           BorderThickness="2"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#fff0f3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>
