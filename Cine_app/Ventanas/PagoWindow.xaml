<Window x:Class="Cine_app.Ventanas.PagoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Realizar Pago" 
        Height="750" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a1a"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Estilo para TextBox -->
        <Style x:Key="CenteredTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,7"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Estilo para PasswordBox -->
        <Style x:Key="CenteredPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,7"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- CABECERA -->
        <Border Grid.Row="0" Background="#2d2d2d" BorderBrush="#ff6b35" BorderThickness="0,0,0,3">
            <StackPanel Margin="20" HorizontalAlignment="Center">
                <TextBlock Text="&#x1F4B3;" FontFamily="Segoe UI Emoji" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Realizar Pago" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtTotal" 
                           Text="Total: 0,00 EUR" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#4CAF50"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- CONTENIDO -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center" MaxWidth="600" Margin="30,20">
                
                <!-- SELECCION DE METODO DE PAGO -->
                <TextBlock Text="Selecciona tu metodo de pago" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#ff6b35"
                           Margin="0,0,0,15"/>

                <!-- BOTONES DE METODO DE PAGO -->
                <StackPanel>
                    <!-- Tarjeta -->
                    <Button x:Name="btnMetodoTarjeta"
                            Height="90"
                            Margin="0,0,0,10"
                            Background="#2d2d2d"
                            BorderBrush="#555"
                            BorderThickness="2"
                            Cursor="Hand"
                            HorizontalContentAlignment="Left"
                            Padding="20,0"
                            Click="BtnMetodoTarjeta_Click">
                        <Grid Width="380">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="&#x1F4B3;" 
                                      FontFamily="Segoe UI Emoji" 
                                      FontSize="32" 
                                      VerticalAlignment="Center"
                                      Margin="0,0,15,0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Tarjeta de Credito/Debito" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="White"/>
                                <TextBlock Text="Visa, Mastercard, American Express" 
                                           FontSize="12" 
                                           Foreground="#aaa"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Button>

                    <!-- Bizum -->
                    <Button x:Name="btnMetodoBizum"
                            Height="90"
                            Margin="0,0,0,10"
                            Background="#2d2d2d"
                            BorderBrush="#555"
                            BorderThickness="2"
                            Cursor="Hand"
                            HorizontalContentAlignment="Left"
                            Padding="20,0"
                            Click="BtnMetodoBizum_Click">
                        <Grid Width="380">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="&#x1F4F1;" 
                                      FontFamily="Segoe UI Emoji" 
                                      FontSize="32" 
                                      VerticalAlignment="Center"
                                      Margin="0,0,15,0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Bizum" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="White"/>
                                <TextBlock Text="Pago instantaneo con tu movil" 
                                           FontSize="12" 
                                           Foreground="#aaa"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Button>

                    <!-- PayPal -->
                    <Button x:Name="btnMetodoPaypal"
                            Height="90"
                            Margin="0,0,0,10"
                            Background="#2d2d2d"
                            BorderBrush="#555"
                            BorderThickness="2"
                            Cursor="Hand"
                            HorizontalContentAlignment="Left"
                            Padding="20,0"
                            Click="BtnMetodoPaypal_Click">
                        <Grid Width="380">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="&#x1F4B5;" 
                                      FontFamily="Segoe UI Emoji" 
                                      FontSize="32" 
                                      VerticalAlignment="Center"
                                      Margin="0,0,15,0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="PayPal" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="White"/>
                                <TextBlock Text="Pago seguro con tu cuenta PayPal" 
                                           FontSize="12" 
                                           Foreground="#aaa"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Button>
                </StackPanel>

                <!-- CONTENEDOR DE FORMULARIOS -->
                <Grid MinHeight="250" Margin="0,20,0,0">
                    <!-- FORMULARIO TARJETA -->
                    <Border x:Name="pnlFormularioTarjeta" 
                            Background="#2d2d2d" 
                            CornerRadius="10" 
                            Padding="20"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="&#x1F4B3; Datos de la Tarjeta" 
                                       FontFamily="Segoe UI Emoji"
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#ff6b35"
                                       Margin="0,0,0,15"/>

                            <!-- Numero de tarjeta -->
                            <TextBlock Text="Numero de tarjeta *" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtNumeroTarjeta"
                                     Style="{StaticResource CenteredTextBoxStyle}"
                                     Margin="0,0,0,12"
                                     MaxLength="16"
                                     PreviewTextInput="TxtNumeroTarjeta_PreviewTextInput"/>

                            <!-- Nombre en la tarjeta -->
                            <TextBlock Text="Nombre del titular *" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtNombreTarjeta"
                                     Style="{StaticResource CenteredTextBoxStyle}"
                                     Margin="0,0,0,12"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Fecha de expiracion -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Fecha expiracion (MM/AA) *" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                                    <TextBox x:Name="txtFechaExpiracion"
                                             Style="{StaticResource CenteredTextBoxStyle}"
                                             MaxLength="5"
                                             PreviewTextInput="TxtFechaExpiracion_PreviewTextInput"
                                             TextChanged="TxtFechaExpiracion_TextChanged"/>
                                </StackPanel>

                                <!-- CVV -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="CVV *" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                                    <PasswordBox x:Name="txtCVV"
                                                Style="{StaticResource CenteredPasswordBoxStyle}"
                                                MaxLength="4"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- FORMULARIO BIZUM -->
                    <Border x:Name="pnlFormularioBizum" 
                            Background="#2d2d2d" 
                            CornerRadius="10" 
                            Padding="20"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="&#x1F4F1; Pago con Bizum" 
                                       FontFamily="Segoe UI Emoji"
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#ff6b35"
                                       Margin="0,0,0,15"/>

                            <!-- Numero de telefono -->
                            <TextBlock Text="Numero de telefono *" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtTelefonoBizum"
                                     Style="{StaticResource CenteredTextBoxStyle}"
                                     Margin="0,0,0,12"
                                     MaxLength="9"
                                     PreviewTextInput="TxtTelefonoBizum_PreviewTextInput"/>

                            <TextBlock Text="Introduce el numero de telefono asociado a tu cuenta Bizum (9 digitos)." 
                                       FontSize="12" 
                                       Foreground="#aaa"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- FORMULARIO PAYPAL -->
                    <Border x:Name="pnlFormularioPaypal" 
                            Background="#2d2d2d" 
                            CornerRadius="10" 
                            Padding="20"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="&#x1F4B5; Pago con PayPal" 
                                       FontFamily="Segoe UI Emoji"
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#ff6b35"
                                       Margin="0,0,0,15"/>

                            <!-- Email de PayPal -->
                            <TextBlock Text="Correo electronico de PayPal *" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtEmailPaypal"
                                     Style="{StaticResource CenteredTextBoxStyle}"
                                     Margin="0,0,0,12"/>

                            <!-- Contrasena de PayPal -->
                            <TextBlock Text="Contrasena de PayPal *" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                            <PasswordBox x:Name="txtPasswordPaypal"
                                        Style="{StaticResource CenteredPasswordBoxStyle}"
                                        Margin="0,0,0,12"/>

                            <TextBlock Text="Seras redirigido a PayPal para completar el pago de forma segura." 
                                       FontSize="12" 
                                       Foreground="#aaa"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- MENSAJE DE ERROR -->
                <Border x:Name="pnlError" 
                        Background="#ff4444" 
                        CornerRadius="5" 
                        Padding="10" 
                        Margin="0,15,0,0"
                        Visibility="Collapsed">
                    <TextBlock x:Name="txtError" 
                               Text="" 
                               Foreground="White" 
                               TextWrapping="Wrap"/>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- BOTONES INFERIORES -->
        <Border Grid.Row="2" Background="#2d2d2d" BorderBrush="#ff6b35" BorderThickness="0,3,0,0" Padding="30,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Boton Cancelar -->
                <Button Grid.Column="0"
                        Content="Cancelar"
                        Height="45"
                        Background="#4a4a4a"
                        Foreground="White"
                        FontSize="16"
                        BorderBrush="#666"
                        Cursor="Hand"
                        Click="BtnCancelar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5a5a5a"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Boton Pagar -->
                <Button x:Name="btnPagar"
                        Grid.Column="2"
                        Content="Pagar"
                        Height="45"
                        Background="#ff6b35"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        BorderThickness="0"
                        IsEnabled="False"
                        Cursor="Hand"
                        Click="BtnPagar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#ff8555"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#666"/>
                                    <Setter Property="Foreground" Value="#999"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
